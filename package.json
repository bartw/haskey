{
  "name": "haskey",
  "private": true,
  "description": "Website for ice-hockey club Haskey Hasselt",
  "version": "2.0.0",
  "author": "Bart Wijnants",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.8.4",
    "copyfiles": "^2.3.0",
    "cssnano": "^4.1.10",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "tailwindcss": "^1.4.6",
    "watch": "^1.0.2"
  },
  "keywords": [
    "haskey",
    "hasselt",
    "ice-hockey"
  ],
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rimraf public",
    "build:html": "copyfiles -u 1 src/*.html public",
    "build:css": "postcss src/index.css -o public/style.css",
    "build:assets": "copyfiles -u 1 assets/*.* assets/**/*.* public",
    "build": "npm run clean && npm run build:html && npm run build:css && npm run build:assets",
    "watch:build": "watch 'npm run build' ./src",
    "serve": "npx http-server public",
    "start": "npm run watch:build & npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bartw/haskey"
  },
  "bugs": {
    "url": "https://github.com/bartw/haskey/issues"
  }
}
